}

.large-text-dark {
  color: rgba(255, 255, 255, .34);
}

.small-text-dark {
  color: rgba(255, 255, 255, .48);
}

.bg-dark2 {
  background: #1E2128;
}

.router-link-active {
  background: var(--q-color-primary) !important;
}

.markdown-body {
        box-sizing: border-box;
        min-width: 200px;
        max-width: 980px;
        padding: 0px 45px 45px 45px;
        background: white;
    }

    @media (max-width: 767px) {
        .markdown-body {
            padding: 15px;
        }
    }

.q-stepper-step {
  background: #1E2128;
}

.q-stepper-dot {
  background: none;
  font-size: 24px;
}
.q-stepper-tab.step-done {
  color: var(--q-color-positive);
}

.q-stepper-tab.step-done.step-colored > .q-stepper-line:after {
background: var(--q-color-positive);
}

.q-stepper-tab.step-done.step-colored > .q-stepper-line:before {
background: var(--q-color-positive);
}

.q-stepper-tab.step-waiting {
color : var(--q-color-white);
}

.q-stepper-tab.step-done.step-colored > .q-stepper-dot > span > i {
  color: var(--q-color-positive);
}

.q-tabs-position-top .q-tabs-bar {
    top: 0;
    border-top-width: 1px;
}

/*pagination style overwrite*/
.q-pagination .q-btn{
  margin-left:3px;
  height:40px!important;
  width:40px!important;
  border-radius:50% !important;

}
.q-pagination .q-btn div{
  color:white;
}

