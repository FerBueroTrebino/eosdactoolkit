// app global css

.dark2 {
  background: #1E2128;
}

.bg-dark2 {
  background: #1E2128;
}

.router-link-active {
  background: var(--q-color-primary) !important;
}

.markdown-body {
        box-sizing: border-box;
        min-width: 200px;
        max-width: 980px;
        padding: 0px 45px 45px 45px;
        background: white;
    }

    @media (max-width: 767px) {
        .markdown-body {
            padding: 15px;
        }
    }

.q-stepper-step {
  background: #1E2128;
}

.q-stepper-tab.step-waiting {
  color: white;
}

.q-stepper-tab.step-done {
  color: var(--q-color-positive);
}

.q-stepper-dot {
  border-radius: none;
  background: none;
}

.q-tabs-position-top .q-tabs-bar {
    top: 0;
    border-top-width: 1px;
}


.q-tabs-head {
min-height:70px;
}

